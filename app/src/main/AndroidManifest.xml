<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gusztavo.tabuada">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tabuada">
        <activity
            android:name=".ComecarActivity"
            android:exported="false" />
        <activity
            android:name=".CongratsActivity"
            android:exported="false" />
        <activity
            android:name=".QuizActivity"
            android:exported="false" />
        <activity
            android:name=".TabuadaActivity"
            android:exported="true"
            android:parentActivityName=".OpcaoActivity" />
        <activity
            android:name=".OpcaoActivity"
            android:exported="true"
            android:parentActivityName=".Main" />
        <activity
            android:name=".Main"
            android:exported="false"
            android:noHistory="false" />
        <activity
            android:name=".NomeActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>