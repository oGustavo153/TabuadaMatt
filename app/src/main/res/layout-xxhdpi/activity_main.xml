<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_matt"
    android:clickable="false"
    android:orientation="vertical"
    android:gravity="center|bottom">

    <!-- Texto, Matt e Botão -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtPresentation"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/balaoescrita"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/presentation"
            android:padding="15dp"
            android:textSize="24dp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:id="@+id/matt_stand"
                android:layout_width="200dp"
                android:layout_height="350dp"
                tools:src="@drawable/matt_stand"/>


            <Button
                android:id="@+id/btBegin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:onClick="muda"
                android:text="Começar!" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>